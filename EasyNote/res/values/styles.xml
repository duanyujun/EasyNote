<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="nav_save_btn_title">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#ff44afec</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>
    
    <style name="nav_edit_title">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="nav_normal_btn_title">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff686868</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>
    
    <style name="note_edit_tool_bar_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="note_edit_content">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">top|left|center</item>
        <item name="android:minHeight">100.0dip</item>
    </style>
    
    <style name="edit_attach_btn">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/attach_note_edit_bg</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">12.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    
    <style name="nav_header_titile">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">#ff646464</item>
        <item name="android:maxWidth">200.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="loadTxt">
        <item name="android:gravity">center</item>
    </style>
    
    <style name="emptyTxt">
        <item name="android:gravity">center</item>
    </style>
    
    <style name="note_list_title">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff535353</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="note_list_abstract">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ff999999</item>
        <item name="android:layout_marginLeft">14.0dip</item>
        <item name="android:layout_marginTop">3.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:maxLines">3</item>
    </style>

</resources>
