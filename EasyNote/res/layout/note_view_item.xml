<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/substation_list_item_selector"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/view_item_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/iv_attach_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
           />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/view_item_sound_layout"
        android:gravity="center_vertical" 
        android:orientation="horizontal" 
        android:background="@drawable/listitem_background" android:padding="2.0dip" android:layout_width="fill_parent" android:layout_height="60.0dip">
        <ImageView 
            android:layout_gravity="center_vertical" 
            android:id="@+id/list_select_icon" 
            android:layout_width="48.0dip" 
            android:layout_height="wrap_content" 
            android:src="@drawable/fi_mp3"
            android:scaleType="centerInside" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="8.0dip">
            <TextView 
                android:id="@+id/attach_abs_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
            <TextView android:id="@+id/attach_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0.0dip" style="@style/note_list_title" />
            <TextView android:textSize="12.0sp" android:id="@+id/attach_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0.0dip" android:layout_marginTop="5.0dip" android:singleLine="true" style="@style/note_list_abstract" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>